<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"  
           fx:controller="org.opencv.MainController"
           styleClass="root">
    <BorderPane>
        <fx:script source="actionlisteners.js"/>
        <top>
            <MenuBar fx:id="menuBar" styleClass="iphone-toolbar" minHeight="28" >
                <menus>
                    <Menu text="%file">
                        <items>
                            <MenuItem text="%exit" onAction="exit(event)" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </top>
        <center>
            <GridPane id="inputPane" alignment="center" hgap="10" vgap="10">
                <padding>
                    <Insets top="10" right="10" bottom="20" left="10"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints prefWidth="120"/>
                    <ColumnConstraints prefWidth="120"/>
                </columnConstraints>
    
                <Button fx:id="btnDetection" text="%faceDetection"
                        onAction="#video" 
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                
                <Button fx:id="btnHdr" text="%hdr" 
                        onAction="#hdr" 
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    
                
    
            </GridPane>
        </center>
    </BorderPane>
    
    <BorderPane fx:id="glassPane" visible="false">
        <center>
            <Label text="%wait" />
        </center>
    </BorderPane>

    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>
</StackPane>